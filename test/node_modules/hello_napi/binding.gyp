{
  "targets": [
    {
      "target_name": "hello",
      "sources": [ "hello.c" ],
      "conditions": [
        [
          "OS == 'emscripten'",
          {
            "product_extension": "node.js",
            "ldflags": [
              '-sMODULARIZE=1',
              '-sEXPORT_NAME=hello',
              '-sWASM_ASYNC_COMPILATION=0'
            ],
            'xcode_settings': {
              'OTHER_LDFLAGS': [
                '-sMODULARIZE=1',
                '-sEXPORT_NAME=hello',
                '-sWASM_ASYNC_COMPILATION=0'
              ]
            },
            'conditions': [
              ['emnapi_manual_linking != 0', {
                'dependencies': [
                  '<!(node -p "require(\'emnapi\').targets"):emnapi'
                ]
              }]
            ]
          },
        ],
        ["OS == 'wasm'", {
          'conditions': [
            ['emnapi_manual_linking != 0', {
              'dependencies': [
                '<!(node -p "require(\'emnapi\').targets"):dlmalloc',
                '<!(node -p "require(\'emnapi\').targets"):emnapi_basic'
              ],
            }]
          ]
        }],
        ["OS == 'wasi'", {
          'conditions': [
            ['emnapi_manual_linking != 0', {
              'conditions': [
                ['wasm_threads != 0', {
                  'dependencies': [
                    '<!(node -p "require(\'emnapi\').targets"):emnapi'
                  ],
                }, {
                  'dependencies': [
                    '<!(node -p "require(\'emnapi\').targets"):emnapi_basic'
                  ],
                }]
              ]
            }]
          ]
        }]
      ]
    }
  ]
}
