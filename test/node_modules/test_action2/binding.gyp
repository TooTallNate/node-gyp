{
  "targets": [
	{
      "target_name": "hello",
      "conditions": [
        [ 'OS!="win"' , {
          'variables': {
            "copy_action" : 'cp'
          }
        }, {
          'variables': {
            "copy_action" : 'copy'
          }
        } ],
      ],
      "actions" : [
        {
          "msvs_quote_cmd": 1,
          "action_name" : "action_test_with_encode",
          "inputs": ["hello.txt"],
          "outputs": ["<(PRODUCT_DIR)/hello.cc.copy"],
          "action": ['<(copy_action) "<(RULE_INPUT_PATH)>" "<(PRODUCT_DIR)/hello.txt.copy" & \
                      echo <(PRODUCT_DIR)/hello.txt.copy > <(RULE_INPUT_DIRNAME)/loc.txt']
        }
      ]
    }
  ]
}
